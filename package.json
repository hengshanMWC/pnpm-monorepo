{
  "name": "@test/monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "license": "MIT",
  "scripts": {
    "pre": "npm-run-all build test:cov",
    "test:cov": "jest --coverage",
    "test": "jest",
    "build": "npm-run-all build:a build:b build:c",
    "build:a": "cd packages/a && yarn build",
    "build:b": "cd packages/b && yarn build",
    "build:c": "cd packages/c && yarn build",
    "lint": "eslint --ext=js,ts,json .",
    "prepare": "husky install",
    "release": "esno scripts/release.ts && git push --follow-tags"
  },
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/plugin-transform-modules-commonjs": "^7.16.8",
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@babel/preset-env": "^7.16.11",
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-typescript": "^8.3.0",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^27.4.0",
    "@typescript-eslint/parser": "^5.12.0",
    "babel-jest": "^27.5.1",
    "bumpp": "^7.1.1",
    "camelcase": "^6.3.0",
    "eslint": "^8.9.0",
    "esno": "^0.14.1",
    "fs-extra": "^10.0.1",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lerna": "^4.0.0",
    "lint-staged": "^12.3.4",
    "npm-run-all": "^4.1.5",
    "rollup": "^2.67.3",
    "rollup-plugin-typescript2": "^0.31.2",
    "scripty": "^2.0.0",
    "terser": "^5.10.0",
    "ts-jest": "^27.1.3",
    "typescript": "^4.5.5",
    "validate-npm-package-name": "^3.0.0",
    "zlib": "^1.0.5"
  }
}
